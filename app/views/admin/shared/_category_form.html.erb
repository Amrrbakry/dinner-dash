<%= form_for([:admin, @category]) do |f| %>
  <%= render 'admin/shared/error_messages', object: f.object %>
  <fieldset>
  	<%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </fieldset> <br/>
  <fieldset>
  	<%= f.label :description %>
  	<%= f.text_area :description, class: "form-control" %>
  </fieldset> <br/>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

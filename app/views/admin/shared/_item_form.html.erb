<%= form_for([:admin, @category, @item], html: { multipart: true }) do |f| %>
  <%= render 'admin/shared/error_messages', object: f.object %>
  <%= render 'item_fields', f: f %>
  <fieldset>
    <%= f.fields_for :options do |option| %>
      <%= render 'option_fields', f: option %>
    <% end %> <br/>
    <%= link_to_add_association "Add an option to this item", f, :options %>  
  </fieldset>
  <fieldset>
    <%= f.fields_for :variations do |v| %> 
      <%= render 'variation_fields', f: v %>
    <% end %>
    <% unless a_variation?(f.object) %>
      <%= link_to_add_association 'add a variation of this item', f, :variations %>
    <% end %>
  </fieldset> <br/>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
  </span>
<% end %>
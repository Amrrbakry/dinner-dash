        <%= link_to "Delete item", admin_item_path(item), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %> 
  </div>
<% else %>
  <div id="item-<%= action_name %>" class="col-md-4">
    <figure id="item-picture">
      <%= image_tag item.picture.url(:medium), width: 500, alt: item.title, class: "img-responsive" %>
    </figure>

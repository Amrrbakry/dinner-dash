<% if @order.errors.any? || @order_item.errors.any? %>
  $("#item-options-errors").html("<%= escape_javascript(render partial: 'admin/shared/error_messages', locals: { object: @order_item }) %>")
<% else %>
$(".cart-summary").html("<%= escape_javascript(render 'layouts/cart_summary') %>")
$(".shopping-cart").html("<%= escape_javascript(render 'carts/shopping_cart') %>")
<% end %>